<button {{action addSlideAction}}>add slide</button>

<div id="control-panel">
  <h3>Control Panel</h3>
  <ul>
    {{#each item in model}}
      <li {{bindAttr class="item.isSelected:selected"}}>
      	<a {{action selectSlideAction item}}>{{item.name}}</a>
      	{{#if item.isSelected}}
      		{{#if item.isEditing}}
      			<a {{action editSlideAction item}}>Save slide</a>
      		{{else}}
				<a {{action editSlideAction item}}>Edit</a>
      		{{/if}}
      		<a {{action deleteSlideAction item}}>X</a>
      	{{/if}}
      </li>
    {{/each}}
  </ul>
</div>


<div id="impress">
  {{#each item in model}}
    {{render slide item}} 
  {{/each}}
</div>