

<div id="control-panel" class="pure-u-1-3">
	<div class="pure-menu pure-menu-open">
    <h3 class="pure-menu-heading">Control Panel</h3>

    <button class="pure-button pure-button-primary" {{action addSlideAction}}>add slide</button>
    <ul>
      {{#each item in model}}
        <li {{bindAttr class="item.isSelected:selected :menu-hover"}}>
          <span>
          	<span {{action selectSlideAction item}}>{{item.name}}</span>
          	{{#if item.isSelected}}
          		{{#if item.isEditing}}
                <span class="icon-stack" {{action editSlideAction item}}>
                  <i class="icon-circle icon-stack-base"></i>
                  <i class="icon-save icon-light"></i>
                </span>
          		{{else}}
                <span class="icon-stack" {{action editSlideAction item}}>
                  <i class="icon-circle icon-stack-base"></i>
                  <i class="icon-pencil icon-light"></i>
                </span>
          		{{/if}}
                <span class="icon-stack" {{action deleteSlideAction item}}>
                  <i class="icon-circle icon-stack-base"></i>
                  <i class="icon-remove icon-light"></i>
                </span>
          	{{/if}}
          </span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>


<div id="impress" class="pure-u-1-3">
  {{#each item in model}}
    {{render slide item}} 
  {{/each}}
</div>