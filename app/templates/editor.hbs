<button {{action addSlideAction}}>add slide</button>

<div id="control-panel">
  <h3>Control Panel</h3>
  <ul>
    {{#each item in model}}
      <li {{bindAttr class="item.isSelected:selected"}}><a {{action selectSlideAction item}}>{{item.name}}</a> <a {{action deleteSlideAction item}}>X</a> </li>
    {{/each}}
  </ul>
</div>


<div id="impress">
  {{#each item in model}}
    {{render slide item}} 
  {{/each}}
</div>